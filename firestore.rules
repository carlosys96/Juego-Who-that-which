rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow anyone to read the high scores leaderboard
    match /highscores/{scoreId} {
      allow read: if true;
      allow create: if true; // Allow new scores to be added
      allow update, delete: if false; // Prevent tampering
    }

    // Allow anyone to write their own session data
    match /sessions/{sessionId} {
      allow read: if true; // Teacher panel needs to read this
      allow create: if true;
      allow update, delete: if false; // Prevent tampering
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}